<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray">
    <!--饼状图显示番茄任务完成情况-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:orientation="vertical"
        android:background="#FFF"
        android:paddingTop="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:gravity="center">
        <Spinner android:id="@+id/sp_year"
            android:layout_marginLeft="10dp"
            android:layout_width="67dp"
            android:layout_height="25dp"
            android:textAlignment="center"
            android:spinnerMode="dropdown"
            android:paddingRight="15dp"
            android:background="@color/lightGray">
        </Spinner>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/sp_down"
            android:layout_marginLeft="-23dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="年"
            android:textSize="18sp"
            android:textColor="@color/inkGray"
            android:layout_marginLeft="5dp" />
        <Spinner android:id="@+id/sp_month"
            android:layout_marginLeft="5dp"
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:textAlignment="center"
            android:spinnerMode="dropdown"
            android:paddingRight="20dp"
            android:background="@color/lightGray">
        </Spinner>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/sp_down"
            android:layout_marginLeft="-20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="月番茄任务完成情况"
            android:textSize="18sp"
            android:textColor="@color/inkGray"
            android:layout_marginLeft="4dp" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:textColor="#EA615A"
                android:textSize="18sp"
                android:text="查询"/>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray"></View>

    <lecho.lib.hellocharts.view.PieChartView
        android:layout_marginLeft="-27dp"
        android:id="@+id/pieChart"
        android:layout_width="match_parent"
        android:layout_height="300dp" />
    </LinearLayout>

    <!--手机使用情况-->
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical"
        android:paddingLeft="8dp"
        android:paddingRight="10dp">
        <!--手机使用时长-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/inkGray"
                android:textSize="22dp"
                android:text="今日手机使用时长"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_phoneUseTime"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/warmRed"
                    android:textSize="22dp"
                    android:text="2时30分30秒"/>
            </RelativeLayout>
        </LinearLayout>
        <!--手机屏保次数-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/inkGray"
                android:textSize="22dp"
                android:text="今日手机屏保次数"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_screenSaveCount"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/warmRed"
                    android:textSize="22dp"
                    android:text="10次"/>
            </RelativeLayout>
        </LinearLayout>
        <!--手机解锁次数-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/inkGray"
                android:textSize="22dp"
                android:text="今日手机解锁次数"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_unlockCount"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/warmRed"
                    android:textSize="22dp"
                    android:text="8次"/>
            </RelativeLayout>
        </LinearLayout>
        <!--手机解锁次数-->
        <LinearLayout
            android:id="@+id/ll_phone"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/inkGray"
                android:textSize="22dp"
                android:text="查看近期手机使用时长折线图"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/right_arrow"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
